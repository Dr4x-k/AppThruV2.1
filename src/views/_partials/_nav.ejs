<div class="sidebar" id="sidebar">
    <div class="logo-content">
        <div class="logo">
            <i class='bx bxs-store' ></i>
            <div class="logo-name">AppThru</div>
        </div>
        <i class='bx bx-menu' id="btn"></i>
    </div>
    <ul class="nav-list">
        <li>
            <a href="/">
                <i class='bx bx-grid-alt' ></i>
                <span class="link-name">Dashboard</span>
            </a>
            <span class="tooltip">Dashboard</span>
        </li>
        <li>
            <a href="#">
                <i class='bx bx-package' ></i>
                <span class="link-name">Pedidos</span>
            </a>
            <span class="tooltip">Pedidos</span>
        </li>
        <li>
            <a href="/products">
                <i class='bx bx-cart' ></i>
                <span class="link-name">Productos</span>
            </a>
            <span class="tooltip">Productos</span>
        </li>
        <% if ( email.fk_rol === 1) { %> 
        <li>
            <a href="account">
                <i class='bx bx-group'></i>
                <span class="link-name">Empleados</span>
            </a>
            <span class="tooltip">Empleados</span>
        </li>
        <% } %> 
        <li>
            <a href="#">
                <i class='bx bx-user' ></i>
                <span class="link-name">Configuracion</span>
            </a>
            <span class="tooltip">Configuracion</span>
        </li>
    </ul>
    <div class="profile-content">
        <div class="profile">
            <div class="profile-details">
                <!-- <img src="" alt=""> -->
                <div class="name-job">
                    <% if (email) { %> 
                    <div class="name"><%= email.nombres %> <%= email.apellidoPaterno %> </div>
                    <div class="job">Developer</div>
                    <% } %> 
                </div>
            </div>
            <a class="link" href="logout"><i class='bx bx-log-out' id="log-out"></i></a>
        </div>
    </div>
</div>


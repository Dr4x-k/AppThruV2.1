                                    <a onclick="confirmation(<%= results[i].idProducto %>);" ><i class='bx bx-trash'></i></i> Borrar</a>
                                </td>
                        </tr>
                        <% } %>
                    <% }; %>
                    </tbody>
                </table>
                <!-- </div> -->
            </div>
            <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11.4.17/dist/sweetalert2.all.min.js"></script>
